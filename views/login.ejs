<!-- Log in page for the newsAggregator app -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Log in</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <link rel="stylesheet" href="../styles/loginpage.css">
</head>
<body>
  <div class="main-enclosing-login-box">
    <div class="jumbotron">
      <p class="h3"> <a href="/">News Aggregator </a></p>
      <a class="h5"> Log In</a>
    </div>
    <form method="POST" action="/login">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input maxlength="255" type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
      
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password" required>
      
        <div class="login-button-div">
          <button type="submit" id="login-submit-button" class="btn btn-primary">Log in</button> <a class="sign-up-link" href="register">Sign up</a>
        </div>
      </div>
    </form>
    <div>
      <!-- This is for error messages -->
      <% if (message) { %>
        <p class="lead" class="login-error-message"><%= message %> </p>
      <% } else { %>
        <p class="lead" class="login-error-message"></p>
      <% } %>
    </div>
  </div>
</body>
</html>